<Window x:Class="MediaOrganizer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="False"
        xmlns:uc="clr-namespace:MediaOrganizer.Controls"
        xmlns:vm="clr-namespace:MediaOrganizer.ViewModels"
        xmlns:cv="clr-namespace:MediaOrganizer.Converters"
        Title="Media Organizer" Height="450" MaxHeight="700" Width="600" MinWidth="450" MinHeight="300">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="cvBoolenToVisibilityConverter" />
        <cv:BooleanToTextConverter x:Key="cvBooleanToTextConverter" />
        <cv:FileExtensionsArrayToStringConverter x:Key="cvExtensionsToStringConverter" />
    </Window.Resources>
    <Window.DataContext>
        <vm:FileOrganizerViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Scrollable Area -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10" Orientation="Vertical">

                <!-- Instruction -->
                <TextBlock Text="Select source and destination folders, then click 'Start Organizing'." FontSize="14" Margin="0,0,0,10" TextAlignment="Center" HorizontalAlignment="Center" />

                <!-- Source and Destination Folder Inputs -->
                <TextBlock Text="Source Root:" FontWeight="SemiBold" Margin="0,6,0,2" />
                <uc:FolderSelector SelectedFolder="{Binding Options.SourceRoot}" Margin="0,0,0,5" />

                <TextBlock Text="Destination Root:" FontWeight="SemiBold" Margin="0,6,0,2" />
                <uc:FolderSelector SelectedFolder="{Binding Options.DestinationRoot}" Margin="0,0,0,10" />

                <!-- Advanced Options Expander -->
                <Expander Header="🛠️ Advanced Options (optional)" Margin="0,10,0,10" IsExpanded="False">
                    <StackPanel Margin="10">

                        <TextBlock Text="Folder Naming" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,5" />
                        <TextBlock Text="Movies Root Folder Name:" FontWeight="SemiBold" Margin="0,6,0,2" />
                        <TextBox Text="{Binding Options.VideoSubfolderName, Mode=TwoWay}" ToolTip="The name of the folder under which all the movies will be organized." Margin="0,0,0,5" />
                        <TextBlock Text="Photos Root Folder Name:" FontWeight="SemiBold" Margin="0,6,0,2" />
                        <TextBox Text="{Binding Options.PhotosSubfolderName, Mode=TwoWay}" ToolTip="The name of the folder under which all the photos will be organized." Margin="0,0,0,5" />
                        <TextBlock Text="Destination Folder Structure:" FontWeight="SemiBold" Margin="0,6,0,2" />
                        <TextBox Text="{Binding Options.DestinationPattern, Mode=TwoWay}" ToolTip="Define how organized folders will be created using placeholders like {Year}\\{Month}\\{Day}." Margin="0,0,0,10" />

                        <TextBlock Text="File Type Settings" FontSize="13" FontWeight="SemiBold" Margin="0,15,0,5" />
                        <TextBlock Text="Photo Extensions:" FontWeight="SemiBold" Margin="0,6,0,2" />
                        <TextBox Text="{Binding Options.PhotoExtensions, Mode=TwoWay, Converter={StaticResource cvExtensionsToStringConverter}}" ToolTip="Comma-separated list of file extensions considered as photos." Margin="0,0,0,5" />
                        <TextBlock Text="Movie Extensions:" FontWeight="SemiBold" Margin="0,6,0,2" />
                        <TextBox Text="{Binding Options.VideoExtensions, Mode=TwoWay, Converter={StaticResource cvExtensionsToStringConverter}}" ToolTip="Comma-separated list of file extensions considered as movies." Margin="0,0,0,10" />

                        <GroupBox Header="File Handling Options" Margin="0,10,0,0">
                            <GroupBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="#FFF9F9F9" />
                                </Style>
                            </GroupBox.Resources>
                            <StackPanel Orientation="Vertical" Margin="10,5,10,5">
                                <CheckBox Content="Delete source files after organizing" IsChecked="{Binding Options.RemoveSource, Mode=TwoWay}" Margin="0,5,0,5" />
                                <CheckBox Content="Skip files that already exist at destination" IsChecked="{Binding Options.SkipExistingFiles, Mode=TwoWay}" Margin="0,5,0,5" />
                            </StackPanel>
                        </GroupBox>

                    </StackPanel>
                </Expander>

            </StackPanel>
        </ScrollViewer>

        <!-- Progress Section -->
        <GroupBox Header="Progress" Grid.Row="1" Visibility="{Binding IsRunning, Converter={StaticResource cvBoolenToVisibilityConverter}}" Margin="6,10,6,0">
            <StackPanel Orientation="Vertical" Margin="10">
                <TextBlock x:Name="lblProcessedCount" Text="{Binding CurrentFile}" TextTrimming="CharacterEllipsis" ToolTip="{Binding CurrentFile}" Margin="0,0,0,5" />
                <ProgressBar x:Name="prgProgress" Height="20" Minimum="0" Maximum="100" IsIndeterminate="False" Value="{Binding TotalProgress, Mode=OneWay}" />
            </StackPanel>
        </GroupBox>

        <!-- Start/Stop Button -->
        <Button x:Name="btnStart" Grid.Row="2" Content="{Binding IsRunning, Converter={StaticResource cvBooleanToTextConverter}}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,10" Width="120" Command="{Binding OrganizeFilesCommand}" Cursor="Hand">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#FF007ACC" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="FontWeight" Value="SemiBold" />
                    <Setter Property="BorderThickness" Value="0" />
                    <Setter Property="Padding" Value="5" />
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FF3399FF" />
                        </Trigger>
                        <DataTrigger Binding="{Binding IsRunning}" Value="True">
                            <Setter Property="Background" Value="#FFE57373" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

    </Grid>
</Window>
