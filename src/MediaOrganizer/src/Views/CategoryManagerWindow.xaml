<Window x:Class="MediaOrganizer.Views.CategoryManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cv="clr-namespace:MediaOrganizer.Converters"
        Title="Manage Categories" Height="350" Width="500">
    <Window.Resources>
        <cv:FileExtensionsArrayToStringConverter x:Key="cvExtensionsToStringConverter" />
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <DataGrid x:Name="dgCategories" ItemsSource="{Binding MediaCategories}" AutoGenerateColumns="False" CanUserAddRows="False" Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding CategoryName, UpdateSourceTrigger=PropertyChanged}" />
                <DataGridTextColumn Header="Folder" Binding="{Binding CategoryRoot, UpdateSourceTrigger=PropertyChanged}" />
                <DataGridTemplateColumn Header="Extensions" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding FileExtensions, Mode=TwoWay, Converter={StaticResource cvExtensionsToStringConverter}}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Add Category" Grid.Row="1" Width="110" HorizontalAlignment="Right" Click="AddCategory_Click" />
    </Grid>
</Window>

